<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionsLogin"
    android:weightSum="100"
    android:background="@color/visacolor"
    android:orientation="vertical"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="90dp"
    android:layout_weight="90"
    android:layout_height="match_parent"
    > <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/visacolor"
        ></Button>
    <Button
        android:id="@+id/b_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/user"
        android:drawableTint="@color/visacolor"
        android:layout_weight="1"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/visacolor"
        ></Button>
    <Button
        android:id="@+id/b_cashProvider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/cp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="#000000" />

</LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/visacolor"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_weight="10"
        android:text="POWERED BY VISA"
        ></Button>

</LinearLayout>